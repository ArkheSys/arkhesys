<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="PessoaCliente" table="PessoaCliente" lazy="false">

    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <many-to-one name="Pessoa" column="IDPessoa" class="Pessoa" />
    <property name="BContribuinte" column="bContribuinte" type="bool" />
    <property name="BBloqueiaCondicao" column="bBloqueiaCondicao" type="bool" />
    <many-to-one name="Condicao" column="IDCondicao" class="Condicao" />
    <property name="BBloqueiaTabelaPreco" column="bBloqueiaTabelaPreco" type="bool" />
    <many-to-one name="TabelaPreco" column="IDTabelaPreco" class="TabelaPreco" />
    <many-to-one name="Vendedor" column="IDVendedor" class="Pessoa" />
    <property name="LimiteCredito" column="LimiteCredito" type="decimal" />
    <property name="NomeConjuge" column="NomeConjuge" type="string" length="80" />
    <property name="NomePai" column="NomePai" type="string" length="80" />
    <property name="NomeMae" column="NomeMae" type="string" length="80" />
    <property name="BBloqueiaVendedor" column="bBloqueiaVendedor" type="bool" />
  </class>
</hibernate-mapping>
