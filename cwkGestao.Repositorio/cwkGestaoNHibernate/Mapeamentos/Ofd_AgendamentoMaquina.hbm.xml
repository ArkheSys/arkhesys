<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="Ofd_AgendamentoMaquina" table="Ofd_AgendamentoMaquina">
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
	
	  <property name="Data" column="Data" type="DateTime" />
	  <property name="Produtividade" column="Produtividade" type="decimal" />
	  <many-to-one name="Ofd_Maquina" column="IDOfd_Maquina" class="Ofd_Maquinas" lazy="false"/>
	  <many-to-one name="Ofd_Obra" column="IDOfd_Obra" class="Ofd_Obra" lazy="false"/>
	  <many-to-one name="Operador1" column="IDOperador1" class="Pessoa" lazy="false"/>
	  <many-to-one name="Operador2" column="IDOperador2" class="Pessoa" lazy="false"/>
	  <property name="Observacao" column="Observacao" type="string" length="512"/>
	  <property name="IncData" column="IncData" type="DateTime" />
	  <property name="IncUsuario" column="IncUsuario" type="string" />
	  <property name="AltData" column="AltData" type="DateTime" />
	  <property name="AltUsuario" column="AltUsuario" type="string" />
    <property name="HoraEntrada" column="HoraEntrada" type="DateTime" />
    <property name="HoraSaida" column="HoraSaida" type="DateTime" />
    
    <bag name="Ocorrencias" table="Ofd_AgendamentoMaquinaOcorrencia" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="IDOfd_AgendamentoMaquina" />
      <one-to-many class="Ofd_AgendamentoMaquinaOcorrencia" />
    </bag>

  </class>
</hibernate-mapping>
