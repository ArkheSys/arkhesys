<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
	<class name="Condicao" table="Condicao">

		<id name="ID" column="ID">
			<generator class="identity" />
		</id>
		<property name="Codigo" column="Codigo" type="Int32" />
		<property name="Nome" column="Nome" type="string" length="60" />
		<property name="Divide" column="Divide" type="Int32" />
		<property name="QtParcela" column="QtParcela" type="Int32" />
		<property name="TipoDt" column="TipoDt" type="string" length="50" />
		<property name="DiaMes" column="DiaMes" type="Int32" />
		<property name="TipoVlr" column="TipoVlr" type="string" length="15" />
		<property name="VlrPerc" column="VlrPerc" type="decimal" />
		<property name="VencimentoFeriado" column="VencimentoFeriado" type="Int32" />
		<property name="Descricao" column="Descricao" type="string"/>

		<property name="Variacao" column="Variacao" type="decimal" />
		<property name="TipoVariacao" column="TipoVariacao" type="bool" />

		<!--column="HabilitaCondicaoPDVDelivery" type="Int32"-->
		<property name="HabilitaCondicaoPDVDelivery" column="HabilitaCondicaoPDVDelivery" type="bool"/>
		<property name="HabilitaNumeroPos" column="HabilitaNumeroPos" type="bool"/>

		<bag name="CondicaoParcelas" table="CondicaoParcela" cascade="all-delete-orphan" inverse="true" lazy="false">
			<key column="IDCondicao" />
			<one-to-many class="CondicaoParcela" />
		</bag>


	</class>
</hibernate-mapping>
