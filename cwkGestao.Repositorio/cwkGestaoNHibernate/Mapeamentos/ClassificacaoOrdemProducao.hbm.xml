<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="ClassificacaoOrdemProducao" table="ClassificacaoOrdemProducao">

    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <property name="Codigo" column="Codigo" type="Int32" />
    <property name="Nome" column="Nome" type="string" length="80" />
    <property name="Status" column="Status" type="Int32" />
    <bag name="OrdemProducaos" table="OrdemProducao">
      <key column="IdClassificacaoOrdemProducao" />
      <one-to-many class="OrdemProducao" />
    </bag>
    <bag name="OrdemProducaoHistoricos" table="OrdemProducaoHistorico">
      <key column="IdClassificacao" />
      <one-to-many class="OrdemProducaoHistorico" />
    </bag>
  </class>
</hibernate-mapping>
