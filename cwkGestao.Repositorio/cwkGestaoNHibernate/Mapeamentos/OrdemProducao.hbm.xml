<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
	<class name="OrdemProducao" table="OrdemProducao">

	<id name="ID" column="ID">
		<generator class="identity" /> 
	</id>
	<property name="Codigo" column="Codigo" type="Int32" />
	<many-to-one name="ClassificacaoOrdemProducao" column="IdClassificacaoOrdemProducao" class="ClassificacaoOrdemProducao" />
					<many-to-one name="Cliente" column="IdCliente" class="Pessoa" />
					<many-to-one name="Filial" column="IdFilial" class="Filial" />
					<many-to-one name="Projeto" column="IdProjeto" class="Projeto" />
					<many-to-one name="PedidoItem" column="IdPedidoItem" class="PedidoItem" />
					<property name="IncData" column="IncData" type="DateTime" />
		<bag name="OrdemProducaoExecucaos" table="OrdemProducaoExecucao">					
			<key column="IdOrdemProducao" />
			<one-to-many class="OrdemProducaoExecucao" />
		</bag>
		<bag name="OrdemProducaoHistoricos" table="OrdemProducaoHistorico">					
			<key column="IdOrdemProducao" />
			<one-to-many class="OrdemProducaoHistorico" />
		</bag>
</class>
</hibernate-mapping>
		