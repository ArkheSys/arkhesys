<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="ServicoImposto" table="ServicoImposto">
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <property name="Codigo" column="Codigo" type="Int32" />
    <property name="Nome" column="Nome" type="string" length="50"/>
    <property name="Tipo" />
    <property name="TipoRetencao" />
    <many-to-one name="PlanoConta" column="IDPlanoConta" class="PlanoConta" lazy="false" />
    <property name="Aliquota" column="Aliquota" type="decimal" precision="9" scale="4" />
    <property name="LimiarPorMes" column="LimiarPorMes" type="decimal" precision="18" scale="2" />
    <property name="LimiarPorVenda" column="LimiarPorVenda" type="decimal" precision="18" scale="2" />
    <property name="RegimeEspecialTributacao" column="RegimeEspecialTributacao" type="Int32"/>

    <many-to-one name="TipoImposto" column="TipoImposto" class="Imposto" lazy="false"/>
    <many-to-one name="CSTImposto" column="IDCSTCodigoImposto" class="CodigoImposto" lazy="false"/>

    <bag name="Servicos" table="ServicoServicoImposto" lazy="false">
      <key column="IDServicoImposto" />
      <one-to-many class="ServicoServicoImposto" />
    </bag>
  </class>
</hibernate-mapping>