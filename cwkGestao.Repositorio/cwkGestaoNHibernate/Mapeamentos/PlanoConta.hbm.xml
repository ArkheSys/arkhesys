<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="PlanoConta" table="PlanoConta">

    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    
    <property name="Codigo" column="Codigo" type="Int32" />
    <property name="Classificacao" column="Classificacao" type="string" length="20" />
    <property name="Nome" column="Nome" type="string" length="60" />
    <property name="BTitulo" column="bTitulo" type="bool" />
    <property name="DebCre" column="DebCre" type="Int32" />
    <many-to-one name="PlanoContaPai" column="IDPlanoConta" class="PlanoConta" lazy="false"/>
    <many-to-one name="PlanoContaReferencial" column="IDPlanoContaReferencial" class="PlanoContaReferencial" lazy="false"/>

    <property name="Cod_Nat_CC" column="Cod_Nat_CC"  type="string" length="5" />
    
    <bag name="PlanoContaFilhos" table="PlanoConta" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="IDPlanoConta" />
      <one-to-many class="PlanoConta" />      
    </bag>
    <bag name="MovimentacaoCheque" table="MovimentacaoCheque" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="IDPlanoConta" />
      <one-to-many class="MovimentacaoCheque" />
    </bag>

  </class>
</hibernate-mapping>
