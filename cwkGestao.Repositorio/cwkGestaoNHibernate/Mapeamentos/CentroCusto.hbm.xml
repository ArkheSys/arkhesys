<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="CentroCusto" table="CentroCusto">

    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <property name="Codigo" column="Codigo" type="Int32" />
    <property name="Classificacao" column="Classificacao" type="string" length="20" />
    <property name="Nome" column="Nome" type="string" length="60" />
    <property name="TipoCCusto" column="TipoCCusto" type="Int32" />
    <many-to-one name="CentroCustoPai" column="IDCentroCusto" class="CentroCusto" />
    <bag name="CentroCustos" table="CentroCusto">
      <key column="IDCentroCusto" />
      <one-to-many class="CentroCusto" />
    </bag>
    <bag name="Movimentos" table="Movimento">
      <key column="IDCentroCusto" />
      <one-to-many class="Movimento" />
    </bag>
  </class>
</hibernate-mapping>
