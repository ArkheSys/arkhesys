<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="Contrato" table="Contrato">
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
	
	<property name="Codigo" column="Codigo" type="Int32" />
	<property name="Data" column="Data" type="DateTime" />
	<property name="DataDigitacao" column="DataDigitacao" type="DateTime" />
	<many-to-one name="Pessoa" column="IDPessoa" class="Pessoa" />
	<many-to-one name="PessoaVendedor" column="IDPessoaVendedor" class="Pessoa" />
	<property name="Observacao" column="Observacao" type="string" />
	<property name="IncData" column="IncData" type="DateTime" />
	<property name="IncUsuario" column="IncUsuario" type="string" />
	<property name="AltData" column="AltData" type="DateTime" />
	<property name="AltUsuario" column="AltUsuario" type="string" />
  <many-to-one name="TipoNota" column="IDTipoNota" class="TipoNota" />
  <many-to-one name="Condicao" column="IDCondicao" class="Condicao" />
  <property name="bDocumentosGerados" column="bDocumentosGerados" type="Int32" />
    
    <bag name="Servicos" table="ContratoServico" inverse="true" cascade="all-delete-orphan" lazy="false"> 
    <key column="IDContrato" />
    <one-to-many class="ContratoServico" />
  </bag>
    <bag name="Produtos" table="ContratoProduto" inverse="true" cascade="all-delete-orphan" lazy="false">
      <key column="IDContrato" />
      <one-to-many class="ContratoProduto" />
    </bag>
  </class>
</hibernate-mapping>
