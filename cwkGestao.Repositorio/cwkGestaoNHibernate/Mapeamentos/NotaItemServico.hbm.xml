<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="NotaItemServico" table="NotaItemServico">

    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
    <many-to-one name="Nota" column="IDNota" class="Nota" />
    <many-to-one name="Servico" column="IDServico" class="Servico" lazy="false" />
    <property name="Valor" column="Valor" type="decimal" precision="18" scale ="2"/>
    <property name="Quantidade" column="Quantidade" type="decimal" precision="18" scale="4"/>
    <property name="SubTotal" column="SubTotal" type="decimal" precision="18" scale="2"/>
    <property name="NomeServico" column="NomeServico" type="string" length="100" />
    <property name="Observacoes" column="Observacoes" type="string" length="500" />
    <property name="PercDesconto" column="PercDesconto" type="decimal" precision="8" scale="4"/>
    <property name="IDOSServicoItem" column="IDOSServicoItem" type="int" precision="8" scale="4"/>
    <property name="Descricao" column="Descricao" type="string" />

    <bag name="NotaItemSvcPedItemSvcs" table="NotaItemServicoPedidoItemServico" lazy="false" inverse="true" cascade="all-delete-orphan" >
      <key column="IDNotaItemServico" />
      <one-to-many class="NotaItemServicoPedidoItemServico" />
    </bag>

    <bag name="ContratoControle" table="ContratoControle" inverse="true" cascade="all-delete-orphan" >
      <key column="IDNotaItemServico" />
      <one-to-many class="ContratoControle" />
    </bag>
    
  </class>
</hibernate-mapping>
