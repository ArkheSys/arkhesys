<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="cwkGestao.Modelo" namespace="cwkGestao.Modelo">
  <class name="PCP_Lote" table="PCP_Lote">
    <id name="ID" column="ID">
      <generator class="identity" />
    </id>
	
	<property name="Codigo" column="Codigo" type="Int32" />
	<property name="Descricao" column="Descricao" type="string" />
	<property name="Data" column="Data" type="DateTime" />

  <bag name="Pedidos" table="Pedido" inverse="true" cascade="save-update" lazy="false" >
    <key column="IDPCP_Lote" />
    <one-to-many class="Pedido" />
  </bag>
    
  </class>
</hibernate-mapping>
